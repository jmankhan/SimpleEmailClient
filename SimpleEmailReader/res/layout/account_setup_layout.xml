<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/simple_email_background">

    <EditText
        android:id="@+id/credentials_pass_edittext"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_background"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/passLabel"
        android:layout_toLeftOf="@id/credentials_pass_edittext"
        android:layout_toStartOf="@id/credentials_pass_edittext"
        android:layout_alignBaseline="@id/credentials_pass_edittext"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#919693"
        android:text="@string/passLabel"/>
    
    <EditText
        android:id="@+id/credentials_user_edittext"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/credentials_pass_edittext"
        android:layout_marginBottom="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_background"
        android:inputType="text" />

    <TextView
        android:id="@+id/userLabel"
        android:layout_toLeftOf="@id/credentials_user_edittext"
        android:layout_toStartOf="@id/credentials_user_edittext"
        android:layout_alignBaseline="@id/credentials_user_edittext"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#000"
        android:shadowRadius="0.5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textColor="#919693"
        android:text="@string/userLabel"/>
    
    <Button
        android:id="@+id/sign_in_button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/credentials_pass_edittext"
        android:layout_marginTop="5dp"
        android:minHeight="24dip"
        android:textColor="#fff"
        android:textSize="12sp"
        android:text="@string/signInButton"
        android:background="@drawable/sign_in_button_background" />

</RelativeLayout>